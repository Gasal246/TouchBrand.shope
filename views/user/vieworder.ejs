<%- include('head.ejs') %>

<div class="container">
    <% if(order){ %>
    <!-- Product listing -->
    <div class="row ">
        <div class="col-12 mt-4" style="display: flex; justify-content: space-between;">
            <h5><a href="/account"><i class="fa-solid fa-angle-left"></i> Your Orders</a></h5>
            <h5 style="color: slategray;">On: <%= order.Orderdate.toDateString() %></h5>
        </div>
        <div class="allProducts row col-12 mt-1">
            <% order.Items.map((item)=>{ %>
            <div class="gcard2 col-12 col-lg-4 mb-2">
                <img src="<%= item.Productimg %>" class="shadow" alt="">
                <div class="gcard2-body p-3">
                    <h6><%= item.Productname %></h6>
                    <span>Quantity: <%= item.Quantity %></span><br>
                    <span>Price: $<%= item.Price %></span><br>
                    <span>Shipping cost: $<%= item.Shippingcost %></span><br>
                    <span>Total: $<%= (item.Price + item.Shippingcost) * item.Quantity  %></span>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mt-4" style="display: flex; justify-content: space-between;">
            <h5 style="color: slategray;"><i class="fa-solid fa-angle-down"></i> Order details</h5>
            <!-- <h5 style="color: slategray;">Arriving: <%= order.Orderdate.toDateString() %></h5> -->
        </div>
        <div class="col-12 row">
            <div class="col-12 col-lg-6">
                <h6 style="color: rgb(71, 88, 68);">Delivered to: <span style="color: rgb(146, 146, 146);"><%= order.Deliveryaddress.cname %></span></h6>
                <h6 style="color: rgb(71, 88, 68);">City: <span style="color: rgb(146, 146, 146);"><%= order.Deliveryaddress.city %></span></h6>
                <h6 style="color: rgb(71, 88, 68);">Street/Home: <span style="color: rgb(146, 146, 146);"><%= order.Deliveryaddress.streetaddress %></span></h6>
                <h6 style="color: rgb(71, 88, 68);">Landmark: <span style="color: rgb(146, 146, 146);"><%= order.Deliveryaddress.landmark %></span></h6>
                <h6 style="color: rgb(71, 88, 68);">Country: <span style="color: rgb(146, 146, 146);"><%= order.Deliveryaddress.country %></span></h6>
                <h6 style="color: rgb(71, 88, 68);">State: <span style="color: rgb(146, 146, 146);"><%= order.Deliveryaddress.state %></span></h6>
                <h6 style="color: rgb(71, 88, 68);">Pincode: <span style="color: rgb(146, 146, 146);"><%= order.Deliveryaddress.pincode %></span></h6>
            </div>
            <div class="col-12 col-lg-6">
                <h6 style="color: rgb(71, 88, 68);">Expected delivery: <span style="color: rgb(146, 146, 146);"><%
                    let edate=new Date(order.Orderdate);
                    edate.setDate(edate.getDate()+3) %>
                    <%= edate.toDateString() %></span></h6>
                <h6 style="color: rgb(71, 88, 68);">Delivery Status: <span style="color: rgb(146, 146, 146);"><%= order.Status %></span></h6>
                <h6 style="color: rgb(71, 88, 68);">Items count: <span style="color: rgb(146, 146, 146);"><%= order.Items.length %></span></h6>
                <h6 style="color: rgb(71, 88, 68);">Total amount: <span style="color: rgb(146, 146, 146);">$<%= order.Totalamount %></span></h6>
            </div>
        </div>
    </div>
    <% } %>
</div>

<%- include('foot.ejs') %>