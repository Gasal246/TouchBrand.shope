    <script>
        function removeFromCart(productId, quantity) {
            // AJAX request to update the quantity
            $.ajax({
                type: 'POST',
                url: `/removefromcart`,
                data: {
                    pid: productId,
                    qty: quantity
                },
                success: function (response) {
                    console.log('Item Removed successfully:', response);
                    location.reload();
                },
            });
        }
        function addToCart(productId) {
            // AJAX request to update the quantity
            $.ajax({
                type: 'GET',
                url: `/addtocart/${productId}`,
                success: async function (response) {
                    if (response.success) {
                        console.log('Item Aadded successfully:', response);
                        // alert('Item Aadded successfully');
                        // await location.reload();
                        await showPopup("Item added to cart successfully")
                    } else {
                        // alert("Item not added to cart, SORRY.. OUT OF STOCK..")
                        await showPopup("Item not added to cart, SORRY.. OUT OF STOCK..")
                    }
                },
            });
        }

        function showPopup(message) {
            // Create the popup element
            var popup = document.createElement("div");
            popup.className = "popup-message";
            var popupContent = document.createTextNode(message);
            popup.appendChild(popupContent);

            // Append the popup to the body
            document.body.appendChild(popup);

            // Display the popup
            popup.style.display = "block";

            // Hide the popup after 3 seconds
            setTimeout(function () {
                popup.style.display = "none";
                // Remove the popup from the DOM after hiding
                location.reload()
                document.body.removeChild(popup);
            }, 2500);
        }

    </script>

