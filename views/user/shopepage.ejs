    <script>
        let thePage
        function prevPage(p) {
            const page = parseInt(p)
            let url = '/shope?page=' + (page - 1) + '&limit=' + 8
            window.location.href = url
            applyFilters(page - 1)
        }
        function nextPage(p) {
            const page = parseInt(p)
            let url = '/shope?page=' + (page + 1) + '&limit=' + 8
            window.location.href = url
            applyFilters(page + 1)
        }

        // Function to send the AJAX request based on selected categories
        function applyFilters(p) {
            const page = parseInt(p)
            var slidervalue = document.getElementById('price-slider').noUiSlider.get()
            let min = slidervalue[0].slice(1)
            let max = slidervalue[1].slice(1)
            const selectedCategories = Array.from(document.querySelectorAll('input[type=checkbox][id^="cat-"]:checked'))
                .map(category => category.name);

            const categoriesQueryParam = selectedCategories.join(',');
            window.location.href = `/shope?categories=${categoriesQueryParam}&min=${min}&max=${max}&page=${page}&limit=${8}`
        }
    </script>
    <!-- SEARCHING SCRIPT -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Select the search input field
            const productSearchInput = document.getElementById('Productsearch');
            // Select all product rows
            const productItems = document.querySelectorAll('.theproduct');

            productSearchInput.addEventListener('input', () => {
                const searchTerm = productSearchInput.value.toLowerCase();
                // Loop through all product items and hide those that don't match the search term
                productItems.forEach((item) => {
                    const productName = item.querySelector('.product-title a').textContent.toLowerCase();
                    const productCategory = item.querySelector('.product-cat a').textContent.toLowerCase();
                    if (
                        productName.includes(searchTerm) ||
                        productCategory.includes(searchTerm)
                    ) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        });
    </script>
    <!-- SORT  -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const sortSelect = document.getElementById('sortby');
            const productContainer = document.querySelector('.pcontainer');

            sortSelect.addEventListener('change', () => {
                const selectedOption = sortSelect.value;
                const productItems = Array.from(productContainer.querySelectorAll('.col-6'));

                productItems.sort((a, b) => {
                    let productPriceA, productPriceB;

                    if (selectedOption === 'low to high') {
                        productPriceA = parseFloat(a.querySelector('.product-price').innerText.slice(1));
                        productPriceB = parseFloat(b.querySelector('.product-price').innerText.slice(1));
                    } else if (selectedOption === 'high to low') {
                        productPriceA = parseFloat(b.querySelector('.product-price').innerText.slice(1));
                        productPriceB = parseFloat(a.querySelector('.product-price').innerText.slice(1));
                    } else {
                        productPriceA = parseFloat(a.querySelector('.product-price').innerText.slice(1));
                        productPriceB = parseFloat(b.querySelector('.product-price').innerText.slice(1));
                    }

                    return productPriceA - productPriceB;
                });

                productContainer.innerHTML = '';
                productItems.forEach(item => {
                    productContainer.appendChild(item);
                });
            });
        });
    </script>

