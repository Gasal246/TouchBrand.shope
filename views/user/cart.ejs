    <script>
        async function updateQuantity(productId, quantity, value) {
            let newQuantity
            newQuantity = parseInt(quantity) + value;
            if(newQuantity < 1){
                newQuantity = 1;
            }else if(newQuantity > 10 ){
                newQuantity = 10;
            }
            // AJAX request to update the quantity
            $.ajax({
                type: 'PUT',
                url: `/updateQuantity/${productId}`,
                data: { quantity: newQuantity },
                success: async (response) => {
                    console.log('Quantity updated successfully:', response);
                    if(response.success){
                        location.reload();
                    }else{
                        await alert("SORRY.. THIS IS THE LAST STOCK YOU HAVE..")
                    }
                },
                error: function (error) {
                    console.error('Error updating quantity:', error);
                }
            });
        }

        function removeFromCart(productId, quantity) {
            // AJAX request to update the quantity
            const query = confirm('Are you sure you want to remove item from cart?');
            if (query){
                $.ajax({
                type: 'POST',
                url: `/removefromcart`,
                data:{
                    pid: productId,
                    qty: quantity
                },
                success: function (response) {
                    console.log('Item Removed successfully:', response);
                    location.reload();
                },
            });
            }
            
        }
    </script>

