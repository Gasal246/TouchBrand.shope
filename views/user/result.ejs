<%- include('head.ejs') %>
<main class="main">
    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Yeah! Gotcha!!<span>TouchBrand Makes Better</span></h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/shope">Shop</a></li>
                <li class="breadcrumb-item active" aria-current="page">List</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="toolbox">
                        <div class="toolbox-left">
                            <div class="toolbox-info">
                                Check <span><%= totalItems %></span> Products resulted
                            </div><!-- End .toolbox-info -->
                        </div><!-- End .toolbox-left -->

                        <div class="toolbox-right">
                            <div class="toolbox-sort">
                                <label for="sortby">Sort by:</label>
                                <div class="select-custom">
                                    <select name="sortby" id="sortby" class="form-control">
                                        <option value="popularity" selected="selected">Most Popular</option>
                                        <option value="low to high">Low to high</option>
                                        <option value="high to low">Hight to Low</option>
                                    </select>
                                </div>
                            </div><!-- End .toolbox-sort -->
                        </div><!-- End .toolbox-right -->
                    </div><!-- End .toolbox -->

                    <div class="products mb-3 pcontainer" id="pagination-container">
                        <% if (results.length > 0) { %>
                            <% results.forEach(result => { %>
                        <div class="product product-list">
                            <div class="row">
                                <div class="col-6 col-lg-3">
                                    <figure class="product-media">
                                        <span class="product-label label-new">New</span>
                                        <a href="/viewproduct/<%= result._id %>">
                                            <img src="<%= result.Imagepath[0] %>" style="max-height: 250px; object-fit: contain;" alt="Product image" class="product-image">
                                        </a>
                                    </figure><!-- End .product-media -->
                                </div><!-- End .col-sm-6 col-lg-3 -->

                                <div class="col-6 col-lg-3 order-lg-last">
                                    <div class="product-list-action">
                                        <div class="product-price">
                                            $<%= result.Price - result.Discount%>
                                        </div><!-- End .product-price -->
                                        <div class="ratings-container">
                                            <div class="ratings">
                                                <div class="ratings-val" style="width: 20%;"></div><!-- End .ratings-val -->
                                            </div><!-- End .ratings -->
                                            <span class="ratings-text">( 2 Reviews )</span>
                                        </div><!-- End .rating-container -->

                                        <div class="product-action">
                                            <a href="/viewproduct/<%= result._id %>" class="btn-product btn-quickview" title="Quick view"><span>quick view</span></a>
                                            <a href="/viewproduct/<%= result._id %>" class="btn-product btn-compare" title="Compare"><span>compare</span></a>
                                        </div><!-- End .product-action -->

                                        <a onclick="addToCart('<%= result._id %>')" class="btn-product btn-cart"><span>add to cart</span></a>
                                    </div><!-- End .product-list-action -->
                                </div><!-- End .col-sm-6 col-lg-3 -->

                                <div class="col-lg-6">
                                    <div class="product-body product-action-inner">
                                        <a href="#" class="btn-product btn-wishlist" title="Add to wishlist"><span>add to wishlist</span></a>
                                        <div class="product-cat">
                                            <a href="/viewproduct/<%= result._id %>"><%= result.Category %></a>
                                        </div><!-- End .product-cat -->
                                        <h3 class="product-title"><a href="/viewproduct/<%= result._id %>"><%= result.Productname %></a></h3><!-- End .product-title -->

                                        <div class="product-content">
                                            <p><%= result.Spec %> </p>
                                        </div><!-- End .product-content -->
                                        
                                        <div class="product-nav product-nav-thumbs">
                                            <% result.Imagepath.forEach( data=>{ %>
                                            <a href="/viewproduct/<%= result._id %>" class="active">
                                                <img src="<%= data %>" style="max-height: 50px; object-fit: contain;" alt="product desc">
                                            </a>
                                            <% }) %>
                                        </div><!-- End .product-nav -->
                                    </div><!-- End .product-body -->
                                </div><!-- End .col-lg-6 -->
                            </div><!-- End .row -->
                        </div><!-- End .product -->
                        <% }); %>
                        <% } else { %>
                            <p>No results found for "<%= searchTerm %>".</p>
                        <% } %>
                    </div><!-- End .products -->

                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item">
                                <% if (currentPage > 1) { %>
                                <a class="page-link page-link-prev" href="?q=<%= searchTerm %>&page=<%= currentPage - 1 %>" aria-label="Previous" tabindex="-1" aria-disabled="true">
                                    <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>Prev
                                </a>
                                <% } %>
                            </li>
                            <li class="page-item active" aria-current="page"><a class="page-link" href="#"><%= currentPage %></a></li>
                            <li class="page-item-total">of <%= totalPages %></li>
                            <li class="page-item">
                                <% if (currentPage < totalPages) { %>
                                <a class="page-link page-link-next" href="?q=<%= searchTerm %>&page=<%= currentPage + 1 %>" aria-label="Next">
                                    Next <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>
                                </a>
                                <% } %>
                            </li>
                        </ul>
                    </nav>
                </div><!-- End .col-lg-9 -->
                
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End .page-content -->
</main><!-- End .main -->

<%- include('footer.ejs') %>

<script src="/assets/js/pagination.min.js"></script>
<script>
    function addToCart(productId) {
            // AJAX request to update the quantity
            $.ajax({
                type: 'GET',
                url: `/addtocart/${productId}`,
                success: function (response) {
                    console.log('Item Aadded successfully:', response);
                    // Update the total price and any other UI elements as needed
                    // For simplicity, let's reload the page to update the UI after quantity change
                    alert('Item Aadded successfully');
                    location.reload();
                },
                error: function (error) {
                    console.error('Error Adding cart item:', error);
                    alert('Item Aadded successfully');
                    location.reload();
                }
            });
        }
</script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const sortSelect = document.getElementById('sortby');
        const productContainer = document.querySelector('.pcontainer');

        sortSelect.addEventListener('change', () => {
            const selectedOption = sortSelect.value;
            const productItems = Array.from(productContainer.querySelectorAll('.product'));

            productItems.sort((a, b) => {
                let productPriceA, productPriceB;

                if (selectedOption === 'low to high') {
                    productPriceA = parseFloat(a.querySelector('.product-price').innerText.slice(1));
                    productPriceB = parseFloat(b.querySelector('.product-price').innerText.slice(1));
                } else if (selectedOption === 'high to low') {
                    productPriceA = parseFloat(b.querySelector('.product-price').innerText.slice(1));
                    productPriceB = parseFloat(a.querySelector('.product-price').innerText.slice(1));
                } else {
                    productPriceA = parseFloat(a.querySelector('.product-price').innerText.slice(1));
                    productPriceB = parseFloat(b.querySelector('.product-price').innerText.slice(1));
                }

                return productPriceA - productPriceB;
            });

            productContainer.innerHTML = '';
            productItems.forEach(item => {
                productContainer.appendChild(item);
            });
        });
    });
</script>

<%- include('foot.ejs') %>